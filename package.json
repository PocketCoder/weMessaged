{
	"name": "wemessaged",
	"version": "0.7.0",
	"description": "An Electron application with React and TypeScript",
	"main": "./out/main/index.js",
	"author": "110399.xyz",
	"homepage": "https://github.com/PocketCoder/weMessaged",
	"scripts": {
		"format": "prettier --write .",
		"lint": "eslint --cache .",
		"typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
		"typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
		"typecheck": "npm run typecheck:node && npm run typecheck:web",
		"start": "electron-vite preview",
		"dev": "electron-vite dev",
		"build": "npm run typecheck && electron-vite build",
		"rebuild": "electron-rebuild -f -w node-mac-permissions",
		"postinstall": "electron-builder install-app-deps",
		"build:unpack": "npm run build && electron-builder --dir",
		"build:win": "npm run build && electron-builder --win",
		"build:mac": "electron-vite build && electron-builder --mac --publish never",
		"build:linux": "electron-vite build && electron-builder --linux",
		"prepare": "husky"
	},
	"build": {
		"mac": {
			"extendInfo": {
				"NSSystemAdministrationUsageDescription": "We need Full Disk Access to manage system files securely."
			}
		}
	},
	"dependencies": {
		"@electron-toolkit/preload": "^3.0.1",
		"@electron-toolkit/utils": "^4.0.0",
		"@electron/rebuild": "^4.0.1",
		"@fontsource-variable/eb-garamond": "^5.2.6",
		"@react-pdf/renderer": "^4.3.0",
		"better-sqlite3": "^11.10.0",
		"clsx": "^2.1.1",
		"file-type": "^21.0.0",
		"heic-convert": "^2.1.0",
		"node-mac-permissions": "^2.5.0",
		"react": "^19.1.0",
		"react-dom": "^19.1.0",
		"react-select": "^5.10.1",
		"sharp": "^0.33.5"
	},
	"devDependencies": {
		"@electron-toolkit/eslint-config-prettier": "^3.0.0",
		"@electron-toolkit/eslint-config-ts": "^3.0.0",
		"@electron-toolkit/tsconfig": "^1.0.1",
		"@types/better-sqlite3": "^7.6.13",
		"@types/heic-convert": "^2.1.0",
		"@types/node": "^22.14.1",
		"@types/react": "^19.1.1",
		"@types/react-dom": "^19.1.2",
		"@vitejs/plugin-react": "^4.3.4",
		"electron": "^35.1.5",
		"electron-builder": "^25.1.8",
		"electron-vite": "^3.1.0",
		"eslint": "^9.24.0",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-hooks": "^5.2.0",
		"eslint-plugin-react-refresh": "^0.4.19",
		"husky": "^9.1.7",
		"prettier": "^3.5.3",
		"typescript": "^5.8.3",
		"vite": "^6.2.6"
	}
}
